@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/AdminLTE/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/AdminLTE/plugins/icheck-bootstrap/icheck-bootstrap.min.css" />
    <link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css" />
    <style>
        /* Estilos Generales */
        body {
            background-color: #f5f5f5;
            background-image: url('~/path/to/your/background-image.jpg'); /* Añade la ruta a tu imagen */
            background-size: cover;
            background-repeat: no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            position: relative; /* Asegura que los elementos dentro se centren correctamente */
        }

        /* Caja de Login */
        .login-box {
            width: 450px;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.95);
            border: 2px solid #ccc;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            border-radius: 15px;
            position: relative;
            z-index: 1; /* Asegura que el login-box esté por encima de los círculos de fondo */
        }

        /* Círculos de Fondo */
        .background-circles {
            position: absolute;
            width: 600px;
            height: 600px;
            top: -150px;
            right: -300px;
            background: radial-gradient(circle, #1BA1E2, transparent);
            opacity: 0.3;
            z-index: 0;
        }

            .background-circles::before {
                content: '';
                position: absolute;
                width: 400px;
                height: 400px;
                background: radial-gradient(circle, #FFD700, transparent);
                top: 250px;
                left: -250px;
                border-radius: 50%;
                opacity: 0.4;
            }

        /* Logo y Título */
        .login-logo {
            text-align: center;
            margin-bottom: 20px;
        }

            .login-logo h1 {
                color: #1BA1E2;
                font-weight: bold;
                font-size: 30px;
                margin: 10px 0;
            }

            .login-logo img {
                max-width: 120px;
                margin-bottom: 10px;
            }

        /* Cuerpo de la Tarjeta */
        .login-card-body {
            padding: 30px;
        }

            .login-card-body .form-control {
                border-radius: 10px;
                border: 1px solid #ccc;
            }

        .form-floating {
            margin-bottom: 15px;
        }

        /* Estilos de Botón */
        .btn-primary {
            background-color: #1BA1E2;
            border-color: #1BA1E2;
            border-radius: 10px;
            width: 100%;
            padding: 10px;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #147ba1;
                transform: translateY(-2px);
            }

        /* Enlaces */
        a {
            color: #1BA1E2;
            text-decoration: underline;
            font-weight: bold;
        }

        /* Pie de Página */
        .footer {
            text-align: center;
            padding: 10px;
            background-color: #f8f9fa;
            position: absolute;
            width: 100%;
            bottom: 0;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- Círculos de Fondo -->
    <div class="background-circles"></div>

    <!-- Caja de Login -->
    <div class="login-box">
        <div class="login-logo">
            <img src="~/LogoPJ-SEJE.png" alt="Logo" />
            <h1>Iniciar Sesión</h1>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label" for="rememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <button id="login-submit" type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
                    <div class="mt-3 text-center">
                       @*  <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a> *@
                        <br />
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar Nuevo Usuario</a>
                        <br />
                       @*  <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmación de correo</a> *@
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts de AdminLTE -->
    <script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE/dist/js/adminlte.min.js"></script>
</body>
</html>