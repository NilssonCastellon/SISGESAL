@model IEnumerable<SISGESAL.Models.ViewModels.AspNetUserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Usuarios</h1>

@* <p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Usuario</a>
</p> *@

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre Usuario</th>
            <th>Email</th>
         @*    <th>Confirmación Email</th> *@
            @* <th>Bloqueo habilitado</th>
            <th>Acceso fallido conteo</th> *@
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                @* <td>@(user.EmailConfirmed ? "Sí" : "No")</td> <!-- Muestra "Sí" para true y "No" para false -->
                <td>@(user.LockoutEnabled ? "Sí" : "No")</td> <!-- Muestra "Sí" para true y "No" para false -->
                <td>@user.AccessFailedCount</td> *@
                <td>
                    <a asp-controller="Roles" asp-action="Asignar" asp-route-userId="@user.Id">Asignar Rol</a>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
